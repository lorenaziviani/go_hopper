# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Application Configuration
APP_NAME=gohopper
LOG_LEVEL=info

# Worker Configuration
WORKER_POOL_SIZE=5
MAX_RETRIES=3
RETRY_DELAY=1000ms

# Queue Configuration
QUEUE_NAME=events
EXCHANGE_NAME=events_exchange
ROUTING_KEY=event.*
DLQ_NAME=events_dlq
DLQ_EXCHANGE=events_dlq_exchange

# Publisher Configuration
PUBLISH_INTERVAL=2s
PUBLISH_BATCH_SIZE=10

# Event Configuration
EVENT_SOURCE=gohopper-publisher
EVENT_TYPES=user.created,user.updated,order.created,payment.processed,notification.sent

# Consumer Configuration
WORKER_SHUTDOWN_TIMEOUT=30s
CONSUMER_SHUTDOWN_TIMEOUT=10s
STATS_REPORT_INTERVAL=30s
HEALTH_CHECK_INTERVAL=60s

RETRY_TIMEOUT=30s
MAX_CONCURRENT=5
