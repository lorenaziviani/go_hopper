# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Application Configuration
APP_NAME=gohopper
LOG_LEVEL=info

# Worker Configuration
WORKER_POOL_SIZE=5
MAX_RETRIES=3
RETRY_DELAY=1000ms

# Queue Configuration
QUEUE_NAME=events
EXCHANGE_NAME=events_exchange
ROUTING_KEY=event.*
DLQ_NAME=events_dlq
DLQ_EXCHANGE=events_dlq_exchange
